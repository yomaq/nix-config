{
  // Config placed here due to Renovate limitations.
  // https://github.com/renovatebot/renovate/issues/40050 for platform-specific directory support (.forgejo/ etc.)
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "docker": {
    "pinDigests": true
  },
  "regexManagers": [
    {
      "fileMatch": ["modules/virtualization/containers/docker/.*\\.nix$"],
      "matchStrings": ["image = \"(?<depName>.*?):(?<currentValue>.*?)(@(?<currentDigest>sha256:[a-f0-9]+))?\""],
      "datasourceTemplate": "docker"
    }
  ]
}
